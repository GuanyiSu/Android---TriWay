<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.triplec.triway.MainActivity"
    tools:showIn="@layout/app_bar_main">

    <TextView
        android:id="@+id/search_hint"
        android:layout_width="@dimen/home_text_width"
        android:layout_height="@dimen/home_text_height"
        android:layout_marginLeft="@dimen/home_text_left_margin"
        android:layout_marginTop="@dimen/home_text_top_margin"
        android:fontFamily="@font/karla"
        android:text="@string/home_search"
        android:textAlignment="viewStart"
        android:textColor="@color/lightGreen"
        android:textFontWeight="bold"
        android:textSize="@dimen/home_text_size"
        android:textStyle="normal" />


    <EditText
        android:id="@+id/searchView"
        android:layout_width="@dimen/home_search_width"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/home_search_left_margin"
        android:layout_marginTop="@dimen/home_search_top_margin"
        app:backgroundTint="@color/lineGreen"/>
    <!--SearchView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="232dp"
        android:layout_marginEnd="10dp"
        android:background="@android:color/white"
        android:iconifiedByDefault="false"
        android:queryBackground="@android:color/white"
        android:queryHint="Where to go"
        android:submitBackground="@android:color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" /-->

    <com.triplec.triway.AutoSlideViewPager
        android:id="@+id/viewPager"
        android:layout_width="@dimen/home_text_width"
        android:layout_height="@dimen/home_album_height"
        android:layout_marginLeft="@dimen/home_text_left_margin"
        android:layout_marginTop="@dimen/home_album_top_margin" />

</RelativeLayout>
